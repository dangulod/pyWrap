import setuptools

with open("README.md", "r", encoding="utf-8") as fh:
    long_description = fh.read()

setuptools.setup(
    name="pyWrap",
    version="${PACKAGE_VERSION}",
    author="David Angulo",
    author_email="angulo.davi@gmail.com",
    description="A small example package",
    long_description=long_description,
    long_description_content_type="text/markdown",
    url="https://github.com/dangulod/pyWrap",
    project_urls={
        "Bug Tracker": "https://github.com/dangulod/pyWrap/issues",
    },
    classifiers=[
        "Programming Language :: Python :: 3",
        "License :: OSI Approved :: MIT License",
        "Operating System :: OS Independent",
    ],
    packages = ['pyWrap', 'pyWrap.animal', 'pyWrap.person'],
    package_data={'pyWrap': ['animal/*.so', 'person/*.so']},
    python_requires=">=3.6",
)

